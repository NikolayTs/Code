package reactiontest;


	import java.awt.Color;
	import java.awt.Graphics;
	import java.awt.Rectangle;

	public class Obstacle4 {

		private static final int DIAMETER = 30;
		int ball4x = 505;
		int ball4y = 0;
		int xa = 2;
		int ya = 1;
		
		private ReactionTest game;

		public Obstacle4(ReactionTest game) {
			this.game= game;
		}

		void move() {
		if (ball4x + xa < 0)
		xa = 1;
		if (ball4x + xa > game.getWidth() - DIAMETER)
			xa = -1;
		if (ball4y + ya < 0)
		ya = 1;
		if (ball4y + ya > game.getHeight() - DIAMETER)
		ya = -1;
		if (collision()){
			game.gameOver();
		}

		ball4x = ball4x + xa;
		ball4y = ball4y + ya;}


		
	public void paint(Graphics g) {
		g.setColor(Color.RED);
		g.fillOval(ball4x, ball4y, DIAMETER, DIAMETER);}

	private boolean collision() {
		return game.user.getBounds().intersects(getBounds());}

	public Rectangle getBounds() {
		return new Rectangle(ball4x, ball4y, DIAMETER, DIAMETER);
	}}



