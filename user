package reactiontest;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import javax.swing.JPanel;
import javax.swing.Timer;

public class Userball1 extends JPanel implements ActionListener, KeyListener{

	Timer t = new Timer(5,this);
	private static final int DIAMETER = 30;
	int userx =250;
	int usery=250;
	int uservelx=0;
	int uservely=0;
	private static final int WIDTH = 60;
	private static final int HEIGHT = 10;

	
	private ReactionTest game;

	public Userball1(ReactionTest game) {
		t.start();
		this.game= game;
		
	
	}

	public void move() {
		
	}
	
	
	
public void paint(Graphics g) {
	g.setColor(Color.BLACK);
	g.fillOval(userx, usery, DIAMETER, DIAMETER);}



public Rectangle getBounds() {
	return new Rectangle(userx, usery, DIAMETER, DIAMETER);
}
public void actionPerformed(ActionEvent e) {
	userx=userx+uservelx;
	usery=usery+uservely;
	repaint();

}
public void keyPressed(KeyEvent e) {
	// KeyPressed
	
	int key = e.getKeyCode();
	if (key==KeyEvent.VK_UP){
		uservelx=0;
		uservely=-3;
	}
	if (key==KeyEvent.VK_DOWN){
		uservelx=0;
		uservely=3;
	}
	if (key==KeyEvent.VK_LEFT){
		uservelx=-3;
		uservely=0;
	}
	if (key==KeyEvent.VK_RIGHT){
		uservelx=3;
		uservely=0;
		
		

}}

public void keyReleased(KeyEvent e) {}
public void keyTyped(KeyEvent e) {}}




	



	

	
	

