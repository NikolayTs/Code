package reactiontest;

	import java.awt.Color;
	import java.awt.Graphics;
	import java.awt.Rectangle;

	public class Obstacle1 {

		private static final int DIAMETER = 30;
		int ball1x = 0;
		int ball1y = 0;
		int xa = 2;
		int ya = 1;
		
		
		
		private ReactionTest game;

		public Obstacle1(ReactionTest game) {
			this.game= game;


		}

		void move() {
		if (ball1x + xa < 0)
		xa = 1;
		if (ball1x + xa > game.getWidth() - DIAMETER)
			xa = -1;
		if (ball1y + ya < 0)
		ya = 1;
		if (ball1y + ya > game.getHeight() - DIAMETER)
		ya = -1;
		if (collision()){
			game.gameOver();
		}

		ball1x = ball1x + xa;
		ball1y = ball1y + ya;}



		
	public void paint(Graphics g) {
		
		g.setColor(Color.RED);
		g.fillOval(ball1x, ball1y, DIAMETER, DIAMETER);}

	private boolean collision() {
		return game.user.getBounds().intersects(getBounds());}

	public Rectangle getBounds() {
		return new Rectangle(ball1x, ball1y, DIAMETER, DIAMETER);
	}}

