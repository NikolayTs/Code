package reactiontest;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

public class Obstacle3 {

	private static final int DIAMETER = 30;
	int ball3x = 2;
	int ball3y = 483;
	int xa = 2;
	int ya = 1;
	
	private ReactionTest game;

	public Obstacle3(ReactionTest game) {
		this.game= game;
	}

	void move() {
	if (ball3x + xa < 0)
	xa = 1;
	if (ball3x + xa > game.getWidth() - DIAMETER)
		xa = -1;
	if (ball3y + ya < 0)
	ya = 1;
	if (ball3y + ya > game.getHeight() - DIAMETER)
	ya = -1;
	if (collision()){
		game.gameOver();
	}

	ball3x = ball3x + xa;
	ball3y = ball3y + ya;}


	
public void paint(Graphics g) {
	g.setColor(Color.RED);
	g.fillOval(ball3x, ball3y, DIAMETER, DIAMETER);}

private boolean collision() {
	return game.user.getBounds().intersects(getBounds());}

public Rectangle getBounds() {
	return new Rectangle(ball3x, ball3y, DIAMETER, DIAMETER);
}}

