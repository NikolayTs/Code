package reactiontest;

	import java.awt.Color;
	import java.awt.Graphics;
	import java.awt.Rectangle;

	public class Obstacle2 {


		private static final int DIAMETER = 30;
		int ball2x = 500;
		int ball2y = 480;
		int xa = 2;
		int ya = 1;
		
		private ReactionTest game;

		public Obstacle2(ReactionTest game) {
			this.game= game;
		}

		void move() {
		if (ball2x + xa < 0)
		xa = 1;
		if (ball2x + xa > game.getWidth() - DIAMETER)
			xa = -1;
		if (ball2y + ya < 0)
		ya = 1;
		if (ball2y + ya > game.getHeight() - DIAMETER)
		ya = -1;
		if (collision()){
			game.gameOver();
		}

		ball2x = ball2x + xa;
		ball2y = ball2y + ya;}


		
	public void paint(Graphics g) {
		g.setColor(Color.RED);
		g.fillOval(ball2x, ball2y, DIAMETER, DIAMETER);}

	private boolean collision() {
		return game.user.getBounds().intersects(getBounds());}

	public Rectangle getBounds() {
		return new Rectangle(ball2x, ball2y, DIAMETER, DIAMETER);
	}}



